<%= f.error_messages %>

<table style="width:100%" cellpadding="0" cellspacing="0">
	<tr>
		<td class="left">
			<div class="field">
					<%= f.label(:title) %><br />						
					<%= f.text_field :title %>
			</div>
			
			<div class="field">
					<%= f.label(:description) %><br />							
					<%= f.text_field :description %>
			</div>		
		</td>
		<td class="right">
			<div class="field">
					<%= f.label(:video, "#{t("single.upload")} #{PluginVideo.human_attribute_name(:video)}") %><br />							
					<%= f.file_field :video %>
			</div>
			
			<% unless f.object.video.blank? %>
			<div class="field">			
					<%= f.label(:video) %><br/>
					<%= text_field_tag("video_path_basename", File.basename(f.object.video.path), :disabled => true) %>						
					<%= f.check_box "remove_video" %>
					<%= content_tag(:span, f.label(:remove_video, t("label.item_delete", :item => PluginVideo.human_attribute_name(:video)))) %>							
			</div>
			<% end %>				
		</td>
	</tr>
</table>


<div class="field">
		<table style="width:100%" cellpadding=0 cellspacing=0>
			<tr>
				<td align=left>
					<%=  f.label(:code) %>							
				</td>
				<td align=right>
					<a href="javascript:toggleEditor('video_code');"><%= t("label.toggle_editor") %></a>
				</td>
			</tr>
		</table>
		<%= f.text_area :code, :style => "width:100%;height:500px" %>
</div>

													