<% if PluginDiscussion.can?(@logged_in_user, :view) %>
	<% discussion_count = PluginDiscussion.record(item).approved.count %>
	<% if discussion_count > 0 %>
		<%= icon("discussion") %>
		<%= link_to "#{discussion_count} #{plugin.model_name.human(:count => discussion_count)}", {:action => "view", :controller => "items", :id => item.id, :anchor => "#{plugin.model_name.human(:count => :other)}"}, :title => "" %>
		<br>
	<% end %>
	
<% end %>
