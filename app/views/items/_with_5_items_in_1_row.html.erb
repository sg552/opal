<%
  title ||= "title for this category"
  tab_index ||= 1
%>

<!-- "items_in_group" == class:"pro_box_01" -->
<div class="items_in_group" style="color: #666666; font-size: 12px; margin-bottom: 10px; width:100%" >
  <div class="tab_name"> <%= title %></div>
  <div id="tab<%= tab_index %>">
    <ul>
      <li class="" onmouseover="setTab(<%= tab_index %>,0)"> 0 - 3 age</li>
      <li class="" onmouseover="setTab(<%= tab_index %>,1)"> 4 - 6 age</li>
      <li class="" onmouseover="setTab(<%= tab_index %>,2)"> 7 - 9 age</li>
      <li class="" onmouseover="setTab(<%= tab_index %>,3)"> 10 - 12 age</li>
    </ul>
  </div>
  <%= render :partial => 'items/tab_for_items_in_index_page', :locals => { :tab_index => tab_index} %>
</div>
